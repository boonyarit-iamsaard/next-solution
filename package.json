{
  "name": "next-solution",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean clean:root",
    "clean:root": "git clean -xdf .cache .turbo node_modules",
    "dev": "turbo run dev",
    "lint": "turbo run lint lint:root --continue",
    "lint:fix": "turbo run lint:fix lint:root:fix --continue",
    "lint:root": "eslint --cache --cache-location .cache/.eslintcache",
    "lint:root:fix": "eslint --fix --cache --cache-location .cache/.eslintcache",
    "typecheck": "turbo run typecheck --continue",
    "prepare": "husky"
  },
  "devDependencies": {
    "@next-solution/eslint-config": "workspace:*",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "catalog:",
    "turbo": "^2.5.5",
    "typescript": "catalog:"
  }
}
